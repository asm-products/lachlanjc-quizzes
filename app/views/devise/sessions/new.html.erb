<%= render "shared/nav" %>

<article class="md-col-5 sm-col-11 mx-auto">
  <%= link_to "Sign up", new_registration_path(resource_name), class: "button button-small bg-white accent right relative mt1" %>
  <h1 class="bold mb0">Log in</h1>
  <hr class="mt1 mb2">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, class: "field-light" %>

    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "off", class: "field-light" %>

    <div class="block">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>

    <%= f.submit "Log in", class: "button mt1" %>

    <small class="mt1 block"><%= link_to "Forgot your password?", new_password_path(resource_name) %></small>
  <% end %>
</article>
